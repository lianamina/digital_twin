{
  "manifest_version": 3,
  "name": "LinkedIn Profile Chatbot",
  "version": "1.0",
  "description": "Chat with LinkedIn profiles using AI that mimics their personality",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://cerebrum-dev.lnkdprod.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Customize Your Chatbot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["chatbot.html", "icons/*"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
} 